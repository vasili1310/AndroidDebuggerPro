<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- General debugging section -->
        <TextView
            android:text="General Debugging"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnFlash"
            android:text="Toggle Flashlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnVibrate"
            android:text="Vibration Test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnScreenTest"
            android:text="Screen Test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSensors"
            android:text="Sensor Test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCamera"
            android:text="Camera Test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- WIFI Debugging Section -->
        <TextView
            android:text="Wi-Fi Debugging"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewSSID"
            android:text="SSID: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewSignalStrength"
            android:text="Signal Strength: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIP"
            android:text="IP Address: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewLinkSpeed"
            android:text="Link Speed: "
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRefreshInfo"
            android:text="Refresh Wi-Fi Info"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnScanNetworks"
            android:text="Scan Nearby Networks"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listViewNetworks"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btnToggleWiFi"
            android:text="Toggle Wi-Fi On/Off"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSpeedTest"
            android:text="Run Speed Test"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewSpeedTestResult"
            android:text="Waiting to start speed test..."
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Battery Debugging Section -->
        <TextView
            android:text="Battery Debugging"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBatteryTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery Status Test"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textBatteryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting to start battery debugging..."
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Storage Debugging -->
        <TextView
            android:text="Storage Debugging"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnStorageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage Info"
            android:layout_marginTop="16dp" />

        <!-- GPS Debugging -->
        <TextView
            android:text="GPS Debugging"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get GPS Info" />

        <!-- System Info Dump Section -->
        <TextView
            android:text="System Info"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSystemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show System Info" />

        <TextView
            android:id="@+id/systemInfoOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="12dp" />
    </LinearLayout>
</ScrollView>